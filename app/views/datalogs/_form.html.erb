<div class="row">
  <%= form_for([@tray, @tray.datalogs.build]) do |f| %>
      <div class="col-md-6">

        <table class="table table-striped table-hover ">
          <thead>
          <tr>
            <th class="success"><p><%= Time.now.strftime("%d %b.") %></p></th>
            <th>CURRENT</th>
            <th>MIN TEMP</th>
            <th>MAX TEMP</th>
          </tr>
          </thead>
          <tbody>
          <tr>
            <td>AMBIENT Temp</td>
            <td><%= f.text_field :ambcur %></td>
            <td><%= f.text_field :ambmin %></td>
            <td><%= f.text_field :ambmax %></td>
          </tr>
          <tr>
            <td>FOLIAR Temp</td>
            <td><%= f.text_field :folcur %></td>
            <td><%= f.text_field :folmin %></td>
            <td><%= f.text_field :folmax %></td>
          </tr>
          <thead>
          <tr>
            <th>pH</th>
            <th>HEATMAT</th>
            <th>H2O2</th>
            <th>TDS</th>
          </tr>
          </thead>

          <tr>
            <td><%= f.text_field :ph %></td>
            <td><%= f.text_field :heatmat %></td>
            <td><%= f.text_field :h202 %></td>
            <td><%= f.number_field :tds %></td>
          </tr>
          </tbody>
        </table>
        <%= f.submit class: 'btn btn-raised hoverable btn-success' %><br>
      </div>
  <% end %>
</div>
