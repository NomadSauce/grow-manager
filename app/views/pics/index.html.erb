<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="jumbotron">
      <div class="row">

        <h2>ALL PHOTOS</h2>
        <h5>NUMBER OF PICS: <%= @pics.length %></h5>
        <%= link_to 'ADD PHOTO', new_pic_path, class: "btn btn-raised btn-success hoverable" %>
        <%= link_to 'BACK', root_path, class: "btn btn-raised btn-default hoverable" %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <% @pics.each do |pic| %>
        <div class="col-lg-4">
          <div class="card">
            <div class="card-title">
              <h2><%= pic.title.upcase %></h2>
            </div>
            <div class="card-body">
              <h3><%= pic.description %></h3>
            </div>
            <div class="card-footer">
              <%= link_to 'VIEW', pic, class: "btn btn-raised btn-success hoverable" %>
              <%= link_to 'DELETE', pic, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-raised btn-default hoverable" %>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>