
<div class="row">
  <div class="col-md-12">
    <%= form_for([@plant, @plant.tasks.build]) do |f| %>


      <div class="input-group col-md-12">
        <%= f.text_field :title, placeholder: 'NOTE', class: 'form-control' %>
        <span class="input-group-btn">
          <%= button_tag(type: 'submit', class: "btn btn-success btn-raised") do %>
              <i class="icon-ok icon-white"></i> ADD</span>
          <% end %>
      </div><br>
    <% end %>
  </div>
</div>