<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-5">
    <div class="jumbotron" align="center">
      <div class="panel panel-success">
        <div class="panel-heading">
          <h2><%= @tray.title.upcase %></h2>
          <%= render 'trays/navbar' %>
        </div>
        <div class="panel-body">
          <%= render @tray.tray_cycles.reject(&:new_record?)%>
          <div class="well">
            <%= render 'tray_cycles/form' %>
          </div>
        </div>


      </div>
    </div>

  </div>

  <div class="col-md-7">
    <div class="jumbotron">

      <% if @tray.datalogs.count != 0 %>
          <table class="table table-striped table-hover ">
            <thead>
            <tr>
              <th class="success"><p>LATEST - <%= @tray.datalogs.all.last.created_at.strftime("%d %b.") %></p></th>
              <th>CURRENT</th>
              <th>MIN TEMP</th>
              <th>MAX TEMP</th>
            </tr>
            </thead>
            <tbody>
            <tr>
              <td>AMBIENT Temp</td>
              <td><%= @tray.datalogs.all.last.ambcur %></td>
              <td><%= @tray.datalogs.all.last.ambmin %></td>
              <td><%= @tray.datalogs.all.last.ambmax %></td>
            </tr>
            <tr>
              <td>FOLIAR Temp</td>
              <td><%= @tray.datalogs.all.last.folcur %></td>
              <td><%= @tray.datalogs.all.last.folmin %></td>
              <td><%= @tray.datalogs.all.last.folmax %></td>
            </tr>
            <thead>
            <tr>
              <th>pH</th>
              <th>HEATMAT</th>
              <th>H2O2</th>
              <th>TDS</th>
            </tr>
            </thead>
            <tr>
              <td><%= @tray.datalogs.all.last.ph %></td>
              <td><%= @tray.datalogs.all.last.heatmat %></td>
              <td><%= @tray.datalogs.all.last.h202 %></td>
              <td><%= @tray.datalogs.all.last.tds %></td>
            </tr>
            </tbody>
          </table>

      <% end %>

      <%= render 'datalogs/form' %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">

  </div>
</div>
<div class="row">
  <div class="col-md-12">
      <% @tray.plants.each do |plant| %>
          <div class="col-md-3">
            <div class="card hoverable">
              <div class="card-height-indicator"></div>
              <div class="card-content">
                <div class="card-image" style="background-color: #66bb6a">
                  <%= attachment_image_tag(plant.images.first, :file, :fill, 200, 200) %>
                  <h3 class="card-image-headline"><%= link_to plant.title.upcase, plant_path(plant.id) %></h3>
                </div>
                <div class="card-body">
                  <% plant.plant_cycles.each do |cycle| %>
                      <span class="label label-primary"><%= cycle.title.upcase %> <%= cycle.schedule.first.strftime("%d %b.") %></span>
                  <% end %>
                  <h4>Planted <%= time_ago_in_words(plant.created_at) %> ago.</h4>
                </div>
              </div>
              <div class="card-footer">
                <%= link_to 'VIEW', plant_path(plant.id), class: "btn btn-raised btn-success hoverable" %>
                <%= link_to 'DELETE', plant, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-raised btn-default hoverable" %>
              </div>
            </div>
          </div>
      <% end %>
  </div>
</div>






